<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BooPraChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#FFB508</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="1">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item><!--for gradient color-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BooPraChat1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#FFB508</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item><!--for gradient color-->
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeNo.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AppThemeNo1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">#C8FF9900</item>
        <item name="colorAccent">#8BC34A</item>
    </style>

    <style name="AppThemeNo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">#C8FF9900</item>
        <item name="colorAccent">#8BC34A</item>

        <item name="android:windowTranslucentStatus">true</item><!--for gradient color-->
        <!--extra-->
        <item name="colorSecondary">#8BC34A</item>

    </style>

    <style name="MediaDashboardTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#8BC34A</item>

        <!--extra-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="colorSecondary">#8BC34A</item>

    </style>

    <!--Theme for messageActivity and GroupMessageActivity-->
    <style name="MessageSendingTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">#FFB508</item>
        <item name="colorAccent">#8BC34A</item>

        <!--extra-->
        <item name="colorSecondary">#8BC34A</item>

    </style>

    <style name="AppThemeNo2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">#8BC34A</item>

        <!--extra-->
        <item name="colorSecondary">#8BC34A</item>

    </style>

    <style name="Theme.BooPraChat.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.BooPraChat.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!--style for bottom navigation text size-->
    <style name="BNVTextStyle">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CircularDeterminateProgressBarForSenderSide">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_progress_bar_for_sender_side</item>
    </style>

    <style name="CircularDeterminateProgressBarForReceiverSide">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_progress_bar_for_receiver_side</item>
    </style>

</resources>